<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">

    <EditText
        android:id="@+id/nameEnter"
        android:layout_width="233dp"
        android:layout_height="80dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="114dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLabel" />

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="233dp"
        android:layout_height="80dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="114dp"
        android:text="Name"
        android:textSize="54sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordEnter"
        android:layout_width="233dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="112dp"
        android:hint="PasswordEnter"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabel" />

    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="257dp"
        android:layout_height="76dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="90dp"
        android:text="Password"
        android:textSize="54sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEnter" />

    <EditText
        android:id="@+id/mailEnter"
        android:layout_width="233dp"
        android:layout_height="80dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="112dp"
        android:ems="10"
        android:hint="MailEnter"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLabel" />

    <TextView
        android:id="@+id/mailLabel"
        android:layout_width="257dp"
        android:layout_height="76dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="88dp"
        android:text="Mail"
        android:textSize="54sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEnter" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="196dp"
        android:text="enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEnter" />
</androidx.constraintlayout.widget.ConstraintLayout>