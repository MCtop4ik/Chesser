<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainUser">

    <Button
        android:id="@+id/b1User"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:background="#E91E63"
        android:text="Start Analyse"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#673AB7"
        app:layout_constraintBottom_toTopOf="@+id/b2User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/b2User"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-400dp"
        android:text="Themes"
        android:textAlignment="center"
        android:textColor="#FFEB3B"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageVieww" />

    <Button
        android:id="@+id/creditsUser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="#CDDC39"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#673AB7"
        app:iconTint="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bgUser" />

    <Button
        android:id="@+id/bgUser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Background"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b2User" />

    <ImageView
        android:id="@+id/imageVieww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/mainbg" />

    <Button
        android:id="@+id/varChessUser"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Variants"
        android:textAlignment="center"
        android:textColor="#00a550"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:backgroundTint="#673AB7"
        app:layout_constraintTop_toBottomOf="@+id/creditsUser"
        tools:layout_editor_absoluteX="95dp" />

    <ImageView
        android:id="@+id/imageView1w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mainbg" />

</androidx.constraintlayout.widget.ConstraintLayout>